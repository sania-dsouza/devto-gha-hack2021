{
  "name": "jovo-v4-template-js",
  "private": true,
  "description": "Get started with Jovo Framework v4 using this sample JavaScript app.",
  "scripts": {
    "build": "babel src --out-dir dist",
    "start": "node dist/app.dev.js --jovo-webhook",
    "start:dev": "nodemon --watch src --exec \"babel src --out-dir dist && node dist/app.dev.js --jovo-webhook\"",
    "bundle:dev": "npm run bundle -- dist/app.dev.js",
    "prebundle": "rimraf bundle && babel src --out-dir dist",
    "bundle": "esbuild --bundle --outfile=bundle/index.js --sourcemap --minify --keep-names --platform=node --target=node14 --format=cjs  --external:aws-sdk --external:@oclif/* --external:@jovotech/cli*",
    "postbundle": "cd bundle && bestzip ../bundle.zip * && cd ..",
    "eslint": "eslint src test --fix",
    "lint-report": "eslint . -f node_modules/eslint-detailed-reporter/lib/detailed.js",
    "test": "jest ./test -c jest.config.js  --coverage",
    "test-virtual" : "jest ./virtual-tests",
    "codecov": "nyc npm test && nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "author": "jovotech",
  "license": "Apache-2.0",
  "dependencies": {
    "@jovotech/db-filedb": "^4.0.0",
    "@jovotech/framework": "^4.0.0",
    "@jovotech/platform-alexa": "^4.0.0",
    "@jovotech/plugin-debugger": "^4.0.0",
    "@jovotech/server-express": "^4.0.0",
    "@jovotech/target-serverless": "^4.0.0",
    "ask-cli": "^2.22.1",
    "jest-html-reporter": "^3.4.2",
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/register": "^7.14.5",
    "@babel/runtime": "^7.14.6",
    "@jovotech/cli-command-build": "^4.0.0",
    "@jovotech/cli-command-deploy": "^4.0.0",
    "@jovotech/cli-command-get": "^4.0.0",
    "@jovotech/cli-command-new": "^4.0.0",
    "@jovotech/cli-command-run": "^4.0.0",
    "@jovotech/cli-core": "^4.0.0",
    "@jovotech/filebuilder": "^0.0.1",
    "babel-jest": "^27.0.6",
    "bestzip": "^2.2.0",
    "codecov": "^3.8.3",
    "esbuild": "^0.13.13",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-strongloop": "^2.1.0",
    "eslint-detailed-reporter": "^0.8.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.10",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "virtual-alexa": "^0.7.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jovotech/jovo-framework.git"
  },
  "bugs": {
    "url": "https://github.com/jovotech/jovo-framework"
  },
  "homepage": "https://github.com/jovotech/jovo-v4-template-js/issues#readme"
}
